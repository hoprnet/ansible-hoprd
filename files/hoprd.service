[Unit]
Description=Hoprd node
After=network.target

[Service]
User=root
Group=root
Type=simple
Restart=always
RestartSec=30s
KillMode=process
KillSignal=SIGINT
TimeoutStopSec=90
Restart=on-failure
WorkingDirectory=/opt/hoprd
EnvironmentFile=/opt/hoprd/.env
EnvironmentFile=/opt/hoprd/.env-default
ExecStart=/usr/bin/docker compose up
ExecStop=/usr/bin/docker compose down
PIDFile=/opt/hoprd/hoprd.pid

[Install]
WantedBy=default.target